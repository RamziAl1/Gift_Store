@model Gifts_Store.Models.UserLogin

@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="tab-pane">
                            <center><h4>My Admin Profile</h4></center>
                            <div class="form-horizontal">
                                <div class="form-group row">
                                    <label for="Username" class="col-sm-2 col-form-label">Username</label>
                                    <div class="col-sm-10">
                                        <div class="form-control border-0" id="Username" name="Username">
                                            @Model.UserName
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Email" class="col-sm-2 col-form-label">Email</label>
                                    <div class="col-sm-10">
                                        <div class="form-control border-0" id="Email" name="Email">
                                            @Model.Email
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Fname" class="col-sm-2 col-form-label">First name</label>
                                    <div class="col-sm-10">
                                        <div class="form-control border-0" id="Fname" name="Fname">
                                            @Model?.User?.Fname
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Lname" class="col-sm-2 col-form-label">Last name</label>
                                    <div class="col-sm-10">
                                        <div class="form-control border-0" id="Lname" name="Lname">
                                            @Model?.User?.Lname
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="ImagePath" class="col-sm-2 col-form-label">Profile photo</label>
                                    <div class="col-sm-10">
                                        <div id="ImagePath" name="ImagePath">
                                            <img src="@Url.Content("~/images/" + Model?.User?.ImagePath)" width="100" height="100" alt="user image" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-sm-2 col-sm-10">
                                        <a asp-controller="Admin" asp-action="EditProfile" class="btn btn-primary">Edit Profile</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
