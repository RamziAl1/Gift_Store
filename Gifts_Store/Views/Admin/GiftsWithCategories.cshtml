@model IEnumerable<Tuple<Gift, string, string>>
@{
    ViewData["Title"] = "GiftsWithCategories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>View Gifts</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item1.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.Sale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.ImageFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.AddedDate)
            </th>
            <th>
                GiftMaker Username
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model){
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Item1.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item1.Sale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item1.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item1.Quantity)
                </td>
                <td>
                    <img src="@Url.Content("~/images/" + item.Item1.ImagePath)" width="100" height="100" alt="gift image" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item1.AddedDate.ToString("yyyy-MM-dd"))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Item3)
                </td>
            </tr>
        }
    </tbody>
</table>


