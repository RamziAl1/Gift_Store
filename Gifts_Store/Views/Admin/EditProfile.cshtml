@model Gifts_Store.Models.Userr

@{
    ViewData["Title"] = "Edit Admin Profile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<center><h1>Edit Admin Profile</h1></center>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="tab-pane">
                            <center><h4>Edit Profile Info</h4></center>
                            <form asp-action="EditProfile" enctype="multipart/form-data" class="form-horizontal">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="Status" />

                                <div class="form-group row">
                                    <label asp-for="Fname" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Fname" class="form-control">
                                        <span asp-validation-for="Fname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="Lname" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Lname" class="form-control">
                                        <span asp-validation-for="Lname" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="form-group row">
                                    <label asp-for="ImageFile" class="col-sm-2 col-form-label">Profile photo</label>
                                    <div class="col-sm-10">
                                        <input asp-for="ImageFile" class="form-control">
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="profilePhoto" class="col-sm-2 col-form-label">current photo</label>
                                    <img src="@Url.Content("~/images/" + Model.ImagePath)" width="100" height="100" alt="user image" id="profilePhoto" name="profilePhoto" />
                                </div>
                                <div class="form-group d-none d-sm-none">
                                    <label asp-for="ImagePath" class="control-label"></label>
                                    <input asp-for="ImagePath" class="form-control" />
                                    <span asp-validation-for="ImagePath" class="text-danger"></span>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-sm-2 col-sm-10">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="tab-pane">
                            <center><h4>Edit Password</h4></center>
                            <form asp-action="EditPassword" class="form-horizontal">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                @if (ViewBag.ErrorMessages != null)
                                {
                                    <div class="text-danger">
                                        <ul>
                                            @foreach (var errorMessage in ViewBag.ErrorMessages)
                                            {
                                                <li>@errorMessage</li>
                                            }
                                        </ul>
                                    </div>
                                }

                                <div class="form-group row">
                                    <label for="oldPassword" class="col-sm-2 col-form-label">Old password</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="oldPassword" name="oldPassword">
                                        <div class="text-danger">
                                            @TempData["InvalidPasswordMessage"]
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="newPassword" class="col-sm-2 col-form-label">New password</label>
                                    <div class="col-sm-10">
                                        <input type="password" class="form-control" id="newPassword" name="newPassword">
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="offset-sm-2 col-sm-10">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div>
    <a asp-action="MyProfile">Back to profile</a>
</div>

