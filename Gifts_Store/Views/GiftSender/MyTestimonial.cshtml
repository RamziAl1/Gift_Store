@model Testimonial
@{
    ViewData["Title"] = "MyTestimonial";
    Layout = "~/Views/Shared/_SenderLayout.cshtml";
}

<section class="mt-5 pt-5">
	<div class="container py-5">
		<div class="row d-flex justify-content-center pt-5">
			<div class="col-md-10 col-xl-8 text-center">
				<h2 class="fw-bold mb-4">My Testimonial</h2>
			</div>
		</div>

		@if (Model == null)
		{
			<h2>Make a testimonial</h2>
			<div class="row">
				<div class="col-md-4">
					<form asp-action="MyTestimonial">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label asp-for="Messege" class="control-label"></label>
							<input asp-for="Messege" class="form-control" />
							<span asp-validation-for="Messege" class="text-danger"></span>
						</div>
						<div class="form-group">
							<input type="submit" value="Create" class="genric-btn primary circle" />
						</div>
					</form>
				</div>
			</div>
		}
		else
		{
			<div class="row text-center  align-items-center">
				<!--card-->
				<div class="col-md-4 mb-4  mx-auto">
					<div class="card">
						<div class="card-body py-4 mt-2 shadow">
							<h4 class="font-weight-bold">My Testimonial</h4>
							<p class="mb-2">
								<i class="fas fa-quote-left pe-2"></i>@Model?.Messege
							</p>
						</div>
					</div>
				</div>
			</div>
		}

	</div>
</section>

