<!DOCTYPE html>

<html>
<head>
	<!-- Mobile Specific Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Favicon-->
	<link rel="shortcut icon" href="~/HomeAssets/img/fav.png">
	<!-- Author Meta -->
	<meta name="author" content="CodePixar">
	<!-- Meta Description -->
	<meta name="description" content="">
	<!-- Meta Keyword -->
	<meta name="keywords" content="">
	<!-- meta character set -->
	<meta charset="UTF-8">
	<!-- Site Title -->
	<title>@ViewBag.Title</title>

	<!--
		CSS
		============================================= -->
	<link rel="stylesheet" href="~/HomeAssets/css/linearicons.css">
	<link rel="stylesheet" href="~/HomeAssets/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
	<link rel="stylesheet" href="~/HomeAssets/css/themify-icons.css">
	<link rel="stylesheet" href="~/HomeAssets/css/bootstrap.css">
	<link rel="stylesheet" href="~/HomeAssets/css/owl.carousel.css">
	<link rel="stylesheet" href="~/HomeAssets/css/nice-select.css">
	<link rel="stylesheet" href="~/HomeAssets/css/nouislider.min.css">
	<link rel="stylesheet" href="~/HomeAssets/css/ion.rangeSlider.css" />
	<link rel="stylesheet" href="~/HomeAssets/css/ion.rangeSlider.skinFlat.css" />
	<link rel="stylesheet" href="~/HomeAssets/css/magnific-popup.css">
	<link rel="stylesheet" href="~/HomeAssets/css/main.css">
</head>
<body>

	<!-- Start Header Area -->
	<header class="header_area sticky-header">
		<div class="main_menu">
			<nav class="navbar navbar-expand-lg navbar-light main_box">
				<div class="container">
					<!-- Brand and toggle get grouped for better mobile display -->
					<a class="navbar-brand logo_h" href="index.html">
						@await Component.InvokeAsync("Logo")
					</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
							aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>

					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
						<h4>Guest</h4>
						<ul class="nav navbar-nav menu_nav ml-auto">
							<li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Home">Home</a></li>
							<li class="nav-item"><a class="nav-link" asp-controller="Guest" asp-action="BrowseGifts">Browse Shop</a></li>

							<li class="nav-item submenu dropdown">
								<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Site</a>
								<ul class="dropdown-menu" style="display: none;">
									<li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="AboutUs">About Us</a></li>
									<li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
									<li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Testimonials">Testimonials</a></li>
								</ul>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</div>
		<div class="search_input" id="search_input_box">
			<div class="container">
				<form class="d-flex justify-content-between">
					<input type="text" class="form-control" id="search_input" placeholder="Search Here">
					<button type="submit" class="btn"></button>
					<span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
				</form>
			</div>
		</div>
	</header>
	<!-- End Header Area -->

	<div>
		@RenderBody()
	</div>

	<!-- start footer Area -->
	<footer class="footer-area section_gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-12  col-md-12 col-sm-12">
					<div class="single-footer-widget">
						<ul class="list-unstyled d-flex justify-content-center">
							<li><a asp-controller="Home" asp-action="Home" class="text-white m-3">Home</a></li>
							<li><a asp-controller="Home" asp-action="Testimonials" class="text-white m-3">Testimonials</a></li>
							<li><a asp-controller="Home" asp-action="AboutUs" class="text-white m-3">About</a></li>
							<li><a asp-controller="Home" asp-action="ContactUs" class="text-white m-3">Contact</a></li>
						</ul>
					</div>
				</div>
			</div>
			<div class="footer-bottom d-flex justify-content-center align-items-center flex-wrap">
				<p class="footer-text text-white m-0">
					<!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
					Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved
					<!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
				</p>
			</div>
		</div>
	</footer>
	<!-- End footer Area -->

	<script src="~/HomeAssets/js/vendor/jquery-2.2.4.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
			crossorigin="anonymous"></script>
	<script src="~/HomeAssets/js/vendor/bootstrap.min.js"></script>
	<script src="~/HomeAssets/js/jquery.ajaxchimp.min.js"></script>
	<script src="~/HomeAssets/js/jquery.nice-select.min.js"></script>
	<script src="~/HomeAssets/js/jquery.sticky.js"></script>
	<script src="~/HomeAssets/js/nouislider.min.js"></script>
	<script src="~/HomeAssets/js/countdown.js"></script>
	<script src="~/HomeAssets/js/jquery.magnific-popup.min.js"></script>
	<script src="~/HomeAssets/js/owl.carousel.min.js"></script>
	<!--gmaps Js-->
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjCGmQ0Uq4exrzdcL6rvxywDDOvfAu6eE"></script>
	<script src="~/HomeAssets/js/gmaps.min.js"></script>
	<script src="~/HomeAssets/js/main.js"></script>
	@RenderSection("Scripts", required: false)
</body>


</html>
