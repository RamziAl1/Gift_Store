@model Userr
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/_MakerLayout.cshtml";
}

<div class="billing_details" style="padding-top: 12rem; padding-bottom: 4rem;">
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <div class="card">
                <form asp-action="EditProfile" enctype="multipart/form-data" class="card-body contact_form mb-5">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Status" />

                    <center><h3>Edit Profile Info</h3></center>
                    <br />

                    <div class="form-group row justify-content-center">
                        <label asp-for="Fname" class="col-sm-4 col-form-label font-weight-bold"></label>
                        <input asp-for="Fname" class="form-control col-sm-6 text-dark" />
                        <span asp-validation-for="Fname" class="text-danger"></span>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label asp-for="Lname" class="col-sm-4 col-form-label font-weight-bold"></label>
                        <input asp-for="Lname" class="form-control col-sm-6 text-dark" />
                        <span asp-validation-for="Lname" class="text-danger"></span>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label asp-for="ImageFile" class="col-sm-4 col-form-label font-weight-bold">Profile photo</label>
                        <input asp-for="ImageFile" class="form-control col-sm-6 text-dark" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label for="ImagePath" class="col-sm-4 col-form-label font-weight-bold">Current photo</label>   
                        <div id="ImagePath" name="ImagePath" class="col-sm-6">
                            <img src="@Url.Content("~/images/" + Model?.ImagePath)" width="100" height="100" alt="user image" />
                        </div>
                    </div>
                    <div class="form-group d-none d-sm-none">
                        <label asp-for="ImagePath" class="control-label"></label>
                        <input asp-for="ImagePath" class="form-control" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="offset-sm-4 col-sm-6">
                            <button type="submit" class="genric-btn primary circle">Save</button>
                        </div>
                    </div>
                </form>

                <form asp-action="EditPassword" class="card-body contact_form mb-5">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <center><h3>Edit Password</h3></center>
                    <br />

                    @if (ViewBag.ErrorMessages != null)
                    {
                        <div class="text-danger text-center">
                            <ul>
                                @foreach (var errorMessage in ViewBag.ErrorMessages)
                                {
                                    <li>@errorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <div class="form-group row justify-content-center">
                        <label for="oldPassword" class="col-sm-4 col-form-label font-weight-bold">Old password</label>
                        <input type="password" class="form-control col-sm-6 text-dark" id="oldPassword" name="oldPassword" />
                        <div class="text-danger">
                            @ViewBag.InvalidPasswordMessage
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <label for="newPassword" class="col-sm-4 col-form-label font-weight-bold">New password</label>
                        <input type="password" class="form-control col-sm-6 text-dark" id="newPassword" name="newPassword" />
                    </div>
                    
                    <div class="form-group row justify-content-center">
                        <div class="offset-sm-4 col-sm-6">
                            <button type="submit" class="genric-btn primary circle">Save</button>
                        </div>
                    </div>
                </form>

                <center>
                    <a asp-action="MyProfile" class="genric-btn primary circle mb-5">Back to profile</a>
                </center>
            </div>
        </div>
    </div>
</div>
