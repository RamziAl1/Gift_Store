@model List<Tuple<Userr, UserLogin, Rolee>>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Users</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="DataTable">
    <thead>
        <tr>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th>
                Profile photo
            </th>
            <th>
                Status
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Item1.Fname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item1.Lname)
        </td>
        <td>
            <img src="@Url.Content("~/images/" + item.Item1.ImagePath)" width="100" height="100" alt="user image" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item1.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item2.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item2.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Item3.Name)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Item1.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Item1.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Item1.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdn.datatables.net/buttons/2.0.1/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdn.datatables.net/buttons/2.0.1/js/buttons.html5.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

<script>
    $(document).ready(function () {
        $('#DataTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copyHtml5',
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5'
            ]
        });
    });
</script>
