@model Gifts_Store.Models.Userr

@{
    ViewData["Title"] = "User details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>User details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            First name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fname)
        </dd>
        <dt class = "col-sm-2">
            Last name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lname)
        </dd>
        <dt class = "col-sm-2">
            Profile photo
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Content("~/images/" + Model.ImagePath)" width="100" height="100" alt="user image" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
