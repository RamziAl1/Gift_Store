@model IEnumerable<Gifts_Store.Models.Home>

@{
    ViewData["Title"] = "Home page data";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home page data</title>
</head>
<body>
@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                Logo
            </th>
            <th>
                Background image
            </th>
            <th>
                Site name
            </th>
            <th>
                Welcome text
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@Url.Content("~/images/" + item.LogoPath)" width="100" height="100" alt="logo image" />
            </td>
            <td>
                <img src="@Url.Content("~/images/" + item.BackgroundPath)" width="100" height="100" alt="background image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SiteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WelcomeText)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                @*|
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
