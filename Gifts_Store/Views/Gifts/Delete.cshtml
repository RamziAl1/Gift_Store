@model Gifts_Store.Models.Gift

@{
    ViewData["Title"] = "Delete Gift";
    var RoleId = Context.Session.GetInt32("RoleId");
    if (RoleId == 1)
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    else if (RoleId == 2)
        Layout = "~/Views/Shared/_MakerLayout.cshtml";
    else if (RoleId == 3 || RoleId == 4)
        Layout = "~/Views/Shared/_SenderLayout.cshtml";
}

<h1>Delete Gift</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Gift</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sale)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageFile)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/images/" +  Model.ImagePath)" width="100" height="100" alt="gift image" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AddedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AddedDate.ToString("yyyy-MM-dd"))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GiftMaker)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GiftMaker.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
